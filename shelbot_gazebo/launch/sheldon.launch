<launch>
    <!--arg name="model" default="$(env DIFFBOT_MODEL)" doc="model type [diffbot, remo]"/-->
    <arg name="model" default="sheldon" doc="model type [sheldon, remo]"/>

    <arg name="rvizconfig" default="$(find sheldon_control)/rviz/diffbot.rviz" />
    <arg name="world_name" default="$(find sheldon_gazebo)/worlds/db_world.world"/>

    <include file="$(find sheldon_gazebo)/launch/sheldon_view.launch">
        <arg name="model" value="$(arg model)" />
        <arg name="world_name" value="$(arg world_name)"/>
    </include>

    <include file="$(find sheldon_control)/launch/sheldon_control.launch">
        <arg name="model" value="$(arg model)" />
    </include>

</launch>
